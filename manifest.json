{
    "manifest_version": 3,
    "name": "LCR EMail Helper",
    "version": "1.0",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": [
      "https://lcr.churchofjesuschrist.org/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
      "service_worker": "service-worker.js"
    }
  }