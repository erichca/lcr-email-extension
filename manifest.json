{
    "manifest_version": 3,
    "name": "LCR EMail Helper",
    "version": "1.0.1",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": [
      "https://lcr.churchofjesuschrist.org/messaging"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "service-worker.js"
    }
  }